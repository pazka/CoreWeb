doctype html
html
    head
        meta(http-equiv="X-UA-Compatible" content="IE=edge")
        meta(name="viewport" content="width=device-width, initial-scale=1")
        title= title
        link(rel='stylesheet', href='/stylesheets/style.css')
        link(rel="stylesheet" href="/stylesheets/bootstrap.min.css" integrity="sha384-/Y6pD6FV/Vv2HJnA6t+vslU6fwYXjCFtcEpHbNJ0lyAFsXTsjBbfaDjzALeQsN6M" crossorigin="anonymous")
        block style
    nav.navbar.navbar-toggleable-md.navbar-light.bg-faded
        button(class="navbar-toggler navbar-toggler-right" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation")
            span.navbar-toggler-icon      
        a.navbar-brand(href="/core")
            img.d-inline-block#logo(width="40" height="30" src="/images/log.png")
        .collapse.navbar-collapse#navbarNavAltMarkup
            .navbar-nav  
                if role >= roles["random"]
                    a.nav-item.nav-link(href="/user/dashboard")
                       h5 dashboard
                if role >= roles["regular"]
                    a.nav-item.nav-link(href="/user/update")
                       h5 options
                if role >= roles["regular"]
                    a.nav-item.nav-link(href="/shop")
                        h5 shop
                if role >= roles["staff"]
                    a.nav-item.nav-link(href="/checkout")
                        h5 caisse
                if role >= roles["staff"]
                    a.nav-item.nav-link(href="/stock")
                        h5 stock
                if role >= roles["staff"]
                    a.nav-item.nav-link(href="/stats")
                        h5 stats
                if role >= roles["admin"]
                    a.nav-item.nav-link(href="/admin")
                        h5 admin
                a.nav-item.nav-link.logout(href="/user/logout").col-1
                    p Log Out
    body
        pre(style='color:green') #{success}
        pre(style='color:red') #{err}
        script(src="/javascripts/jquery-3.2.1.min.js")
        script(src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.11.0/umd/popper.min.js" integrity="sha384-b/U6ypiBEHpOf/4+1nzFpr53nxSS+GLCkfwBdFNTxtclqqenISfwAzpKaMNFNmj4" crossorigin="anonymous")
        script(src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-beta/js/bootstrap.min.js" integrity="sha384-h0AbiXch4ZDo7tp9hKZ4TsHbi047NrKGLO3SEJAg45jXxnGIfYzk4Si90RDIqNm1" crossorigin="anonymous")
        block content

