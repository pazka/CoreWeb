extends layout

block content
    .main.container
        .row
            .col-md-6.col-md-offset-3
                h1.display-4.m-b-2 Sign Up

                // register form
                form(method='POST' action='/user/register')
                    div.form-group
                        label(for='prenom') Prénom
                        input#name.form-control(type='text', placeholder='' name='firstname')
                        label(for='nom') Nom 
                        input#name.form-control(type='text', placeholder='Pour te retrouver et te casser les genoux' name='name')
                    div.form-group 
                        label(for='password') Mot de passe (6 char. min., stocké nulle part en clair, totalement encrypté)
                        input#pw.form-control(type='password' name='password')
                    div.form-group
                        label(for='confirmPassword') Mot de passe de confirmation
                        input#pw2.form-control(type='password' name='confirmPassword')
                    button.btn.btn-primary(type='submit') Entrez dans la secte !
