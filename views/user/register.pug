extends layout

block content
    .main.container
        .row
            .col-md-6.col-md-offset-3
                h1.display-4.m-b-2 Sign Up

                // register form
                form(method='POST' action='/user/register')
                    div.form-group
                        label(for='prenom') First Name:
                        input#name.form-control(type='text', placeholder='first name' name='firstname')
                        label(for='nom') Name:
                        input#name.form-control(type='text', placeholder='first name' name='name')
                    div.form-group
                        label(for='password') Password:
                        input#pw.form-control(type='password' name='password')
                    div.form-group
                        label(for='confirmPassword') Confirm Password:
                        input#pw2.form-control(type='password' name='confirmPassword')
                    button.btn.btn-primary(type='submit') Sign up
