extends layout

block content
    .main.container
        .row
            .col-md-6.col-md-offset-3
                h1.display-4.m-b-2 Sign In

                // register form
                form(method='POST' action='/user/login')
                    div.form-group
                        label(for='id') ID:
                        input#name.form-control(type='numeric', placeholder='Id' name='id')
                    div.form-group
                        label(for='password') Password:
                        input#pw.form-control(type='password' name='password')
                    button.btn.btn-primary(type='submit') LogIn
                    
        div
            a(href="/user/register") Not a user ? Register !
